---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
import Button from "../components/Button.astro";
import Text from "../components/Text.astro";
import Heading from "../components/Heading.astro";
---

<MainLayout title="Titel">
  <main class="container mx-auto p-4">
    <h1>Komponentbibliotek</h1>
    <hr class="my-4" />
    <!-- Heading -->
    <Heading htmlheading="h1" size="verylarge">H1 heading</Heading>
    <Heading htmlheading="h2" size="large">H2 heading</Heading>
    <Heading htmlheading="h3" size="medium">H3 heading</Heading>

    <!-- Text -->
    <section>
      <Text teksttype="manchet" stylingclasses="pt-8"> Dette er manchet </Text>
      <Text teksttype="brødtekst" stylingclasses="pt-8"> Dette er brødtekst </Text>
      <Text teksttype="konsultativ" stylingclasses="pt-8"> Dette er konsultativ </Text>
      <Text teksttype="statement" stylingclasses="pt-8"> Dette er statement </Text>
    </section>
  </main>
  <!-- Link komponent instanser -->
  <section>
    <h2 class="font-serif text-2xl">Links</h2>
    <p class="my-4"><Link href="#">Default link: </Link>Default linket er en del af en tekst, og burde gerne fungere som et <Link href="#">link</Link> i en paragraf.</p>
  </section>
  <p class="my-4"><Link href="#" variant="primary">Link: primary</Link></p>
  <p class="my-4"><Link href="#" variant="primary" size="small">Link: primary size small</Link></p>
  <p class="my-4"><Link href="#" variant="primary" size="medium">Link: primary size medium</Link></p>
  <p class="my-4"><Link href="#" variant="primary" size="large">Link: primary size large</Link></p>
  <p class="my-4"><Link href="#" variant="secondary" size="small">Link: secondary size small</Link></p>
  <p class="my-4"><Link href="#" variant="secondary" size="medium">Link: secondary size medium</Link></p>
  <p class="my-4"><Link href="#" variant="secondary" size="large">Link: secondary size large</Link></p>

  <!-- Slut på Link komponent instanser -->

  <!-- Buttons komponent instanser -->
  <section>
    <h2 class="font-serif text-2xl">Buttons</h2>
    <p class="my-4"><Button>Default knap</Button></p>
    <p class="my-4"><Button variant="primary">Button variant: primary</Button></p>
    <p class="my-4"><Button variant="primary" size="small">Button variant: primary size small</Button></p>
    <p class="my-4"><Button variant="primary" size="medium">Button variant: primary size medium</Button></p>
    <p class="my-4"><Button variant="primary" size="large">Button variant: primary size large</Button></p>
    <p class="my-4"><Button variant="secondary" size="small">Button variant: secondary size small</Button></p>
    <p class="my-4"><Button variant="secondary" size="medium">Button variant: secondary size medium</Button></p>
    <p class="my-4"><Button variant="secondary" size="large">Variant: secondary size large</Button></p>
  </section>
  <!-- Slut på Buttons komponent instanser -->
</MainLayout>
